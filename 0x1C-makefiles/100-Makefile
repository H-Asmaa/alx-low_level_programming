CC = gcc
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
WERROR := ${CFLAGS}

.PHONY: all clean oclean fclean re
all: ${SRC:.c=.o}
	${CC} ${WERROR} $^ -o ${NAME}

main.o: main.c m.h
	${COMPILER} ${WERROR} -c $< -o $@

school.o: school.c m.h
	${COMPILER} ${WERROR} -c $< -o $@

clean:
	${RM} -f *~ ${NAME}

oclean:
	${RM} -f ${SRC:.c=.o}

fclean: clean oclean

re: oclean all
