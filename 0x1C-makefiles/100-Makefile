CC = gcc
COMPILER := ${CC}
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic
WERROR := ${CFLAGS}

all: ${SRC:.c=.o}
	${COMPILER} ${WERROR} $^ -o ${NAME}

clean:
	${RM} -f *~ ${NAME}

oclean:
	${RM} -f ${SRC:.c=.o}

fclean: clean oclean

re: oclean all
